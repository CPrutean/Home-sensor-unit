{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cStandard": "c89",
            "cppStandard": "c++23",
            "intelliSenseMode": "windows-gcc-x64"
        }
    ],[
        {
            "name": "Arduino",
            "includePath": [
                "${workspaceFolder}/**", // Include your library's own files
                "C:/Program Files (x86)/Arduino/tools/**", // Path to Arduino tools (Windows example)
                "C:/Program Files (x86)/Arduino/hardware/arduino/avr/cores/arduino", // Arduino core for AVR boards
                "C:/Program Files (x86)/Arduino/hardware/arduino/avr/variants/standard", // Standard variant for AVR boards
                "${HOME}/.arduino15/packages/**", // Path for libraries installed via Board Manager (e.g., ESP32, ESP8266)
                // Add paths for other boards if you develop for them, e.g.:
                "C:/Users/calin/AppData/Local/Arduino15/packages/esp32/hardware/esp32/1.0.6/cores/esp32",
                // "C:/Users/YOUR_USERNAME/AppData/Local/Arduino15/packages/esp32/hardware/esp32/1.0.6/variants/esp32"
            ],
            "forcedInclude": [
                "C:/Program Files (x86)/Arduino/hardware/arduino/avr/cores/arduino/Arduino.h" // Force include Arduino.h for IntelliSense
            ],
            "defines": [
                "F_CPU=16000000L", // Common CPU frequency for Uno
                "ARDUINO=10808",   // Arduino IDE version (adjust as needed)
                "ARDUINO_ARCH_AVR", // Architecture define
                "ARDUINO_AVR_UNO"   // Specific board define (adjust as needed)
            ],
            "compilerPath": "C:/Program Files (x86)/Arduino/hardware/tools/avr/bin/avr-g++", // Path to your compiler
            "cStandard": "c11",
            "cppStandard": "c++11",
            "intelliSenseMode": "gcc-arm" // Or "msvc-x64", "clang-x64" depending on your setup
        }
    ]
    "version": 4
}